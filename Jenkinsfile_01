pipeline {
  agent any
  stages {
    stage('Hello') {
      steps {
        command 'echo Hello World'
      }
      post {
        success {
          script {
            currentBuild.result = 'FAILURE'
          }
        }
      }
    }
  }
  post {
    always {
      echo currentBuild.currentResult
    }
  }
}
